@page
@model Mission09_duke95.Pages.PurchaseModel
@{
    ViewData["Title"] = "Shopping Cart";
}


<h2>Your Cart</h2>


<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <!--Something new added table identification and striping-->
    
    <tbody class="table table-primary table-striped-columns accordion-item">

        @foreach (var i in Model.basket.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@(i.Quantity * i.Book.Price)</td>
            </tr>
        }
    </tbody>

    <tfoot class="table table-warning">
        <tr>
            <td colspan="3">Total: </td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Purchasing</a>

    <!--Extra bootstrap feature adding a notification badge-->
    <button type="button" class="btn btn-primary btn-success float-end">
        Book Store Rewards Program Money <span class="badge text-bg-secondary">
            @Model.basket.CalculateTotal().ToString("c") 
        </span>
    </button>
</div>